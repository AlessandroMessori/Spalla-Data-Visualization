{
  "build": {
    "codeDeployBundle": {
      "source": "app/**"
    }
  },
  "deploy": {
    "environments": {
      "staging": {
        "codeDeploy": {
          "region": "eu-west-1",
          "deploymentGroup": "staging"
        }
      },
      "production": {
        "codeDeploy": {
          "region": "eu-west-1",
          "deploymentGroup": "production"
        }
      }
    }
  }
}
